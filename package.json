{
  "name": "personal-publishing-scripts",
  "version": "0.0.0",
  "repository": "https://github.com/RyukyuInteractive/personal-publishing-scripts.git",
  "author": "RyukyuInteractive",
  "license": "MIT",
  "scripts": {
    "test": "jest --coverage --no-cache",
    "build": "yarn bundle:clean",
    "bundle": "rollup --config",
    "bundle:clean": "rm -rf ./dist && yarn bundle"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@rollup/plugin-buble": "^0.21.0",
    "@rollup/plugin-commonjs": "^11.0.1",
    "@rollup/plugin-multi-entry": "^3.0.0",
    "@rollup/plugin-node-resolve": "^7.0.0",
    "@rollup/plugin-strip": "^1.3.1",
    "@rollup/plugin-sucrase": "^3.0.0",
    "@types/jest": "^24.0.25",
    "husky": "^4.0.6",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "rollup": "^1.29.0",
    "ts-jest": "^24.3.0",
    "tslint": "^5.20.1",
    "tslint-config-standard": "^9.0.0",
    "typescript": "^3.7.4"
  }
}
